void messageReceived(String &topic, String &payload)
{
    uint8_t idx = topic.lastIndexOf('/') + 1;
    String channel = topic.substring(idx);
    uint8_t pin = channel.toInt();
    uint8_t value = payload.toInt();

    update_pins(pin, value);
}

